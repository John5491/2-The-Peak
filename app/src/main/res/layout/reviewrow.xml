<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:elevation="10dp"
        app:cardCornerRadius="30dp">
        <ImageView
            android:id="@+id/imageViewReviewPic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/profile" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John"
        android:fontFamily="@font/open_sans_extrabold"
        android:textSize="15sp"
        android:textColor="#652AD3"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="25dp"/>


    <RatingBar
        android:id="@+id/ratingBarReview"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="60dp"
        android:numStars="5"
        android:stepSize="1"
        android:rating="1.0"
        android:theme="@style/RatingBar"
        android:isIndicator="true"
        android:scaleX="0.5"
        android:scaleY="0.5" />

    <ImageButton
        android:id="@+id/imageButtonDelete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_delete"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="360dp"/>

    <TextView
        android:id="@+id/textViewReviewDescription"
        android:layout_width="330sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="45dp"
        android:paddingBottom="20dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:text="It has amazing view and it's not even difficult to get to the top. Definitely recommend for people that wish to start hiking."/>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@id/textViewReviewDescription"
        android:background="#D3D3D3"/>
</RelativeLayout>